@model List<Product> 
@using Flowers_DB.Models





    @foreach (var product in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
            <div class="product-item text-center" data-id="@product.Category.Name.ToLower()">
                <div class="img">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">
                        <img src="~/img/@product.ImageUrl" class="img-fluid" alt="">
                    </a>
                </div>
                <div class="title mt-3">
                    <h6>@product.Name</h6>
                </div>
                <div class="price">
                <button class="btn btn-success" id="add-to-cart" value="@product.Id">Add To Basket</button>
                <br>
                <br>
                       <a asp-controller="basket"  asp-action="basket" asp-route-id="@product.Id"> <span class="text-black-50 add-to-cart" data-id="@product.Id" >add </span> </a>
                <span class="text-black-50">$@(product.Price - product.Price * product.Discount / 100)</span>
                </div>
            </div>
        </div>
       

        @*<partial name="_ProductItemPartialView" model="product" />*@
    }




